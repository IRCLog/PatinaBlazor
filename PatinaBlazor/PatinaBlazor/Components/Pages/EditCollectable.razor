@page "/edit-collectable/{id:int}"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using PatinaBlazor.Data
@using PatinaBlazor.Services
@using Microsoft.AspNetCore.Components.Forms
@using System.ComponentModel.DataAnnotations
@using Microsoft.EntityFrameworkCore
@attribute [Authorize]
@rendermode InteractiveServer
@inject ApplicationDbContext DbContext
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject IImageService ImageService

<ImageModal @ref="imageModal" Description="@collectable?.Description" />

<PageTitle>Edit Collectable</PageTitle>

@if (collectable == null)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p>Loading collectable...</p>
    </div>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        <i class="bi bi-exclamation-circle"></i> @errorMessage
    </div>
    <div class="text-center">
        <a href="/my-collectables" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to My Collectables
        </a>
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-pencil-square"></i> Edit Collectable</h1>
        <div>
            <a href="/my-collectables" class="btn btn-secondary me-2">
                <i class="bi bi-list-ul"></i> My Collectables
            </a>
            <a href="/collectables" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Collectables
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body">
                    <EditForm Model="@editModel" OnValidSubmit="@HandleValidSubmit" FormName="EditCollectableForm">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label for="description" class="form-label">Description <span class="text-danger">*</span></label>
                            <InputText id="description"
                                       class="form-control"
                                       @bind-Value="editModel.Description"
                                       placeholder="Enter description of your collectable" />
                            <ValidationMessage For="@(() => editModel.Description)" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label for="price" class="form-label">Price (USD) <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <InputNumber id="price"
                                             class="form-control"
                                             @bind-Value="editModel.Price"
                                             placeholder="0.00"
                                             step="0.01" />
                            </div>
                            <ValidationMessage For="@(() => editModel.Price)" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label for="notes" class="form-label">Notes</label>
                            <InputTextArea id="notes"
                                           class="form-control"
                                           @bind-Value="editModel.Notes"
                                           placeholder="Add any additional notes about this collectable (optional)"
                                           rows="4" />
                            <ValidationMessage For="@(() => editModel.Notes)" class="text-danger" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Current Images</label>
                            @if (collectable.Images != null && collectable.Images.Any())
                            {
                                <div class="row">
                                    @foreach (var image in collectable.Images.OrderBy(i => i.DisplayOrder))
                                    {
                                        <div class="col-md-6 mb-3">
                                            <div class="card">
                                                <img src="@ImageService.GetImageUrl(image)"
                                                     alt="@collectable.Description"
                                                     class="card-img-top"
                                                     style="height: 200px; object-fit: cover; cursor: pointer;"
                                                     @onclick="(() => ShowImageModal(image))" />
                                                <div class="card-body">
                                                    @if (image.IsMainImage)
                                                    {
                                                        <span class="badge bg-primary mb-2">Main Image</span>
                                                    }
                                                    <div class="d-flex gap-2">
                                                        @if (!image.IsMainImage)
                                                        {
                                                            <button type="button" class="btn btn-sm btn-outline-primary" @onclick="(() => SetAsMainImage(image))">
                                                                <i class="bi bi-star"></i> Set as Main
                                                            </button>
                                                        }
                                                        <button type="button" class="btn btn-sm btn-outline-danger" @onclick="(() => RemoveImage(image))">
                                                            <i class="bi bi-trash"></i> Remove
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No images currently set.</p>
                            }

                            <label for="images" class="form-label">Upload New Images</label>
                            <InputFile id="images"
                                       class="form-control"
                                       OnChange="OnImagesSelected"
                                       accept="image/*"
                                       multiple />
                            <div class="form-text">
                                <small>Upload up to 10 new images for your collectable (max 5MB each). Supported formats: JPG, PNG, GIF, WebP</small>
                            </div>

                            @if (imageUploadErrors.Any())
                            {
                                <div class="alert alert-danger mt-2">
                                    <i class="bi bi-exclamation-circle"></i> Image Upload Errors:
                                    <ul class="mb-0 mt-2">
                                        @foreach (var error in imageUploadErrors)
                                        {
                                            <li>@error</li>
                                        }
                                    </ul>
                                </div>
                            }

                            @if (selectedImageFiles.Any())
                            {
                                <div class="mt-3">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <h6 class="mb-0">
                                            <i class="bi bi-images"></i> New Images Selected (@selectedImageFiles.Count)
                                        </h6>
                                        <button type="button" class="btn btn-sm btn-outline-danger" @onclick="ClearSelectedImages">
                                            <i class="bi bi-x-circle"></i> Clear All
                                        </button>
                                    </div>
                                    <div class="row">
                                        @for (int i = 0; i < selectedImageFiles.Count; i++)
                                        {
                                            var index = i;
                                            var file = selectedImageFiles[i];
                                            <div class="col-md-6 col-lg-4 mb-3">
                                                <div class="card">
                                                    <div class="card-body">
                                                        <h6 class="card-title">@file.Name</h6>
                                                        <p class="card-text mb-1">
                                                            <strong>Size:</strong> @FormatFileSize(file.Size)
                                                        </p>
                                                        <p class="card-text mb-2">
                                                            <strong>Type:</strong> @file.ContentType
                                                        </p>
                                                        <button type="button" class="btn btn-sm btn-outline-danger" @onclick="(() => RemoveSelectedImage(index))">
                                                            <i class="bi bi-x-circle"></i> Remove
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/my-collectables" class="btn btn-secondary me-md-2">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                }
                                <i class="bi bi-save"></i> Update Collectable
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

<!-- Toast Container -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                <i class="bi bi-check-circle me-2"></i>
                @toastMessage
                @if (!string.IsNullOrEmpty(collectableLink))
                {
                    <div class="mt-2">
                        <a href="@collectableLink" class="btn btn-light btn-sm">
                            <i class="bi bi-eye"></i> View My Collectables
                        </a>
                    </div>
                }
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>

    <div id="errorToast" class="toast align-items-center text-white bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                <i class="bi bi-exclamation-circle me-2"></i>
                @toastMessage
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }

    private Collectable? collectable;
    private CollectableEditModel editModel = new();
    private string currentUserId = string.Empty;
    private bool isSubmitting = false;
    private string toastMessage = string.Empty;
    private string collectableLink = string.Empty;
    private string errorMessage = string.Empty;
    private List<IBrowserFile> selectedImageFiles = new();
    private List<string> imageUploadErrors = new();
    private ImageModal imageModal = default!;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = await UserManager.GetUserAsync(authState.User);

        if (user != null)
        {
            currentUserId = user.Id;
            await LoadCollectable();
        }
    }

    private async Task LoadCollectable()
    {
        collectable = await DbContext.Collectables
            .Include(c => c.Images)
            .FirstOrDefaultAsync(c => c.Id == Id && c.UserId == currentUserId);

        if (collectable == null)
        {
            errorMessage = "Collectable not found or you don't have permission to edit it.";
            return;
        }

        // Populate the edit model
        editModel.Description = collectable.Description;
        editModel.Price = collectable.Price;
        editModel.Notes = collectable.Notes;
    }

    private async Task HandleValidSubmit()
    {
        if (collectable == null || string.IsNullOrEmpty(currentUserId))
        {
            await ShowErrorToast("Invalid collectable or user session. Please refresh and try again.");
            return;
        }

        isSubmitting = true;
        StateHasChanged();

        try
        {
            // Update basic properties
            collectable.Description = editModel.Description;
            collectable.Price = editModel.Price;
            collectable.Notes = editModel.Notes;

            // Handle multiple new image uploads if present
            if (selectedImageFiles.Any())
            {
                var uploadResults = await ImageService.SaveMultipleImagesAsync(selectedImageFiles);

                var successfulUploads = uploadResults.Where(r => r.Success).ToList();
                var failedUploads = uploadResults.Where(r => !r.Success).ToList();

                if (failedUploads.Any())
                {
                    var errorMessage = string.Join(", ", failedUploads.Select(f => f.ErrorMessage));
                    await ShowErrorToast($"Failed to upload some images: {errorMessage}");

                    // Clean up successful uploads if any failed
                    foreach (var successResult in successfulUploads)
                    {
                        await ImageService.DeleteImageAsync(successResult.FileName);
                    }
                    return;
                }

                // Create CollectableImage records for successful uploads
                var currentImageCount = collectable.Images.Count;
                for (int i = 0; i < successfulUploads.Count; i++)
                {
                    var result = successfulUploads[i];
                    var newImage = new CollectableImage
                    {
                        CollectableId = collectable.Id,
                        FileName = result.FileName,
                        ContentType = result.ContentType,
                        FileSize = result.FileSize,
                        IsMainImage = currentImageCount == 0 && i == 0, // First new image is main if no existing images
                        DisplayOrder = currentImageCount + i,
                        CreatedDate = DateTime.UtcNow
                    };

                    DbContext.CollectableImages.Add(newImage);
                }
            }

            await DbContext.SaveChangesAsync();

            collectableLink = "/my-collectables";
            await ShowSuccessToast($"Successfully updated '{collectable.Description}'!");

            // Navigate back after a short delay
            await Task.Delay(2000);
            Navigation.NavigateTo("/my-collectables");
        }
        catch (Exception ex)
        {
            await ShowErrorToast($"Failed to update collectable: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }

    private async Task SetAsMainImage(CollectableImage image)
    {
        if (collectable?.Images != null)
        {
            // Remove main status from all images
            foreach (var img in collectable.Images)
            {
                img.IsMainImage = false;
            }

            // Set this image as main
            image.IsMainImage = true;

            // Update in database
            DbContext.CollectableImages.UpdateRange(collectable.Images);
            await DbContext.SaveChangesAsync();

            StateHasChanged();
        }
    }

    private async Task RemoveImage(CollectableImage image)
    {
        if (collectable?.Images != null)
        {
            // Delete the physical file
            await ImageService.DeleteCollectableImageAsync(image);

            // Remove from database
            DbContext.CollectableImages.Remove(image);
            collectable.Images.Remove(image);

            // If this was the main image and there are other images, set the first one as main
            if (image.IsMainImage && collectable.Images.Any())
            {
                collectable.Images.First().IsMainImage = true;
            }

            await DbContext.SaveChangesAsync();
            StateHasChanged();
        }
    }

    private void OnImagesSelected(InputFileChangeEventArgs e)
    {
        selectedImageFiles.Clear();
        imageUploadErrors.Clear();

        if (e.FileCount > 0)
        {
            selectedImageFiles.AddRange(e.GetMultipleFiles());
            imageUploadErrors = ImageService.ValidateImageFiles(selectedImageFiles);
        }

        StateHasChanged();
    }

    private void ClearSelectedImages()
    {
        selectedImageFiles.Clear();
        imageUploadErrors.Clear();
        StateHasChanged();
    }

    private void RemoveSelectedImage(int index)
    {
        if (index >= 0 && index < selectedImageFiles.Count)
        {
            selectedImageFiles.RemoveAt(index);
            imageUploadErrors = ImageService.ValidateImageFiles(selectedImageFiles);
            StateHasChanged();
        }
    }

    private string FormatFileSize(long bytes)
    {
        string[] suffixes = { "B", "KB", "MB", "GB" };
        int counter = 0;
        decimal number = bytes;

        while (Math.Round(number / 1024) >= 1)
        {
            number /= 1024;
            counter++;
        }

        return $"{number:n1}{suffixes[counter]}";
    }

    private async Task ShowSuccessToast(string message)
    {
        toastMessage = message;
        StateHasChanged();

        await JSRuntime.InvokeVoidAsync("showToast", "successToast");
    }

    private async Task ShowErrorToast(string message)
    {
        toastMessage = message;
        StateHasChanged();

        await JSRuntime.InvokeVoidAsync("showToast", "errorToast");
    }

    private async Task ShowImageModal(CollectableImage selectedImage)
    {
        if (collectable?.Images != null && collectable.Images.Any())
        {
            var images = collectable.Images.OrderBy(i => i.DisplayOrder).ToList();
            var startIndex = images.FindIndex(i => i.Id == selectedImage.Id);
            await imageModal.ShowModal(images, Math.Max(0, startIndex));
        }
    }

    public class CollectableEditModel
    {
        [Required(ErrorMessage = "Description is required")]
        [StringLength(500, ErrorMessage = "Description cannot exceed 500 characters")]
        public string Description { get; set; } = string.Empty;

        [Required(ErrorMessage = "Price is required")]
        [Range(0.01, double.MaxValue, ErrorMessage = "Price must be greater than $0.00")]
        public decimal Price { get; set; }

        [StringLength(1000, ErrorMessage = "Notes cannot exceed 1000 characters")]
        public string? Notes { get; set; }
    }
}

<script>
    window.showToast = (toastId) => {
        const toastElement = document.getElementById(toastId);
        if (toastElement) {
            const toast = new bootstrap.Toast(toastElement, {
                autohide: true,
                delay: 5000
            });
            toast.show();
        }
    };
</script>