@implements IDisposable
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<!-- Desktop Sidebar -->
<div class="sidebar-container @(isCollapsed ? "collapsed" : "expanded")">
    <div class="sidebar-header">
        <div class="brand @(isCollapsed ? "collapsed" : "")">
            <NavLink href="" Match="NavLinkMatch.All" class="brand-link">
                <img src="/img/SilzellNetLogo.png" alt="SilzellNet" class="brand-logo" />
            </NavLink>
        </div>
        <button class="collapse-btn" @onclick="ToggleSidebar" type="button">
            <i class="bi @(isCollapsed ? "bi-chevron-right" : "bi-chevron-left")"></i>
        </button>
    </div>

    <nav class="sidebar-nav">
        <div class="nav-section">
            <div class="nav-item">
                <NavLink class="nav-link custom-nav-link" href="" Match="NavLinkMatch.All" title="Home">
                    <i class="bi bi-house-door-fill"></i>
                    <span class="nav-text">Home</span>
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link custom-nav-link" href="counter" title="Counter">
                    <i class="bi bi-plus-square-fill"></i>
                    <span class="nav-text">Counter</span>
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link custom-nav-link" href="weather" title="Weather">
                    <i class="bi bi-list-nested"></i>
                    <span class="nav-text">Weather</span>
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link custom-nav-link" href="auth" title="Auth Required">
                    <i class="bi bi-lock"></i>
                    <span class="nav-text">Auth Required</span>
                </NavLink>
            </div>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-section">
                    <div class="nav-item">
                        <NavLink class="nav-link custom-nav-link" href="collectables" title="Collectables">
                            <i class="bi bi-gem"></i>
                            <span class="nav-text">Collectables</span>
                        </NavLink>
                    </div>

                    <AuthorizeView Roles="Admin">
                        <Authorized Context="adminContext">
                            <div class="nav-item">
                                <NavLink class="nav-link custom-nav-link" href="/admin" title="Admin">
                                    <i class="bi bi-gear-fill"></i>
                                    <span class="nav-text">Admin</span>
                                </NavLink>
                            </div>
                        </Authorized>
                    </AuthorizeView>
                </div>

                <div class="nav-divider"></div>

                <div class="nav-section">
                    <div class="nav-item">
                        <NavLink class="nav-link custom-nav-link" href="Account/Manage" title="@context.User.Identity?.Name">
                            <i class="bi bi-person-fill"></i>
                            <span class="nav-text">@context.User.Identity?.Name</span>
                        </NavLink>
                    </div>

                    <div class="nav-item">
                        <form action="Account/Logout" method="post">
                            <AntiforgeryToken />
                            <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                            <button type="submit" class="nav-link custom-nav-link logout-btn" title="Logout">
                                <i class="bi bi-arrow-bar-left"></i>
                                <span class="nav-text">Logout</span>
                            </button>
                        </form>
                    </div>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-section">
                    <div class="nav-item">
                        <NavLink class="nav-link custom-nav-link" href="Account/Register" title="Register">
                            <i class="bi bi-person"></i>
                            <span class="nav-text">Register</span>
                        </NavLink>
                    </div>
                    <div class="nav-item">
                        <NavLink class="nav-link custom-nav-link" href="Account/Login" title="Login">
                            <i class="bi bi-person-badge"></i>
                            <span class="nav-text">Login</span>
                        </NavLink>
                    </div>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

<!-- Mobile Navigation -->
<div class="mobile-nav">
    <div class="mobile-header">
        <NavLink href="" Match="NavLinkMatch.All" class="mobile-brand">
            <img src="/img/SilzellNetLogo.png" alt="SilzellNet" class="mobile-brand-logo" />
        </NavLink>
        <button class="hamburger @(isMobileOpen ? "open" : "")" @onclick="ToggleMobileNav" type="button">
            <span></span>
            <span></span>
            <span></span>
        </button>
    </div>

    <div class="mobile-menu @(isMobileOpen ? "open" : "")">
        <nav class="mobile-nav-content">
            <div class="mobile-nav-item">
                <NavLink class="mobile-nav-link custom-mobile-nav-link" href="" Match="NavLinkMatch.All" @onclick="CloseMobileNav">
                    <i class="bi bi-house-door-fill"></i>
                    <span>Home</span>
                </NavLink>
            </div>

            <div class="mobile-nav-item">
                <NavLink class="mobile-nav-link custom-mobile-nav-link" href="counter" @onclick="CloseMobileNav">
                    <i class="bi bi-plus-square-fill"></i>
                    <span>Counter</span>
                </NavLink>
            </div>

            <div class="mobile-nav-item">
                <NavLink class="mobile-nav-link custom-mobile-nav-link" href="weather" @onclick="CloseMobileNav">
                    <i class="bi bi-list-nested"></i>
                    <span>Weather</span>
                </NavLink>
            </div>

            <div class="mobile-nav-item">
                <NavLink class="mobile-nav-link custom-mobile-nav-link" href="auth" @onclick="CloseMobileNav">
                    <i class="bi bi-lock"></i>
                    <span>Auth Required</span>
                </NavLink>
            </div>

            <AuthorizeView>
                <Authorized>
                    <div class="mobile-nav-divider"></div>

                    <div class="mobile-nav-item">
                        <NavLink class="mobile-nav-link custom-mobile-nav-link" href="collectables" @onclick="CloseMobileNav">
                            <i class="bi bi-gem"></i>
                            <span>Collectables</span>
                        </NavLink>
                    </div>

                    <AuthorizeView Roles="Admin">
                        <Authorized Context="adminContext">
                            <div class="mobile-nav-item">
                                <NavLink class="mobile-nav-link custom-mobile-nav-link" href="/admin" @onclick="CloseMobileNav">
                                    <i class="bi bi-gear-fill"></i>
                                    <span>Admin</span>
                                </NavLink>
                            </div>
                        </Authorized>
                    </AuthorizeView>

                    <div class="mobile-nav-divider"></div>

                    <div class="mobile-nav-item">
                        <NavLink class="mobile-nav-link custom-mobile-nav-link" href="Account/Manage" @onclick="CloseMobileNav">
                            <i class="bi bi-person-fill"></i>
                            <span>@context.User.Identity?.Name</span>
                        </NavLink>
                    </div>

                    <div class="mobile-nav-item">
                        <form action="Account/Logout" method="post">
                            <AntiforgeryToken />
                            <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                            <button type="submit" class="mobile-nav-link custom-mobile-nav-link logout-btn" @onclick="CloseMobileNav">
                                <i class="bi bi-arrow-bar-left"></i>
                                <span>Logout</span>
                            </button>
                        </form>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <div class="mobile-nav-divider"></div>

                    <div class="mobile-nav-item">
                        <NavLink class="mobile-nav-link custom-mobile-nav-link" href="Account/Register" @onclick="CloseMobileNav">
                            <i class="bi bi-person"></i>
                            <span>Register</span>
                        </NavLink>
                    </div>
                    <div class="mobile-nav-item">
                        <NavLink class="mobile-nav-link custom-mobile-nav-link" href="Account/Login" @onclick="CloseMobileNav">
                            <i class="bi bi-person-badge"></i>
                            <span>Login</span>
                        </NavLink>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </nav>
    </div>
</div>

@code {
    private bool isCollapsed = false;
    private bool isMobileOpen = false;
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = Navigation.ToBaseRelativePath(Navigation.Uri);
        Navigation.LocationChanged += OnLocationChanged;
    }

    private async Task ToggleSidebar()
    {
        isCollapsed = !isCollapsed;

        // Debug logging
        await JSRuntime.InvokeVoidAsync("console.log", $"Sidebar toggled: {isCollapsed}");

        // Update the page class to adjust margin
        if (isCollapsed)
        {
            await JSRuntime.InvokeVoidAsync("eval", "document.querySelector('.page').style.marginLeft = '80px'");
        }
        else
        {
            await JSRuntime.InvokeVoidAsync("eval", "document.querySelector('.page').style.marginLeft = '280px'");
        }

        StateHasChanged();
    }

    private async Task ToggleMobileNav()
    {
        isMobileOpen = !isMobileOpen;
        await JSRuntime.InvokeVoidAsync("console.log", $"Mobile nav toggled: {isMobileOpen}");
        StateHasChanged();
    }

    private void CloseMobileNav()
    {
        isMobileOpen = false;
        StateHasChanged();
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = Navigation.ToBaseRelativePath(e.Location);
        isMobileOpen = false;
        StateHasChanged();
    }

    public void Dispose()
    {
        Navigation.LocationChanged -= OnLocationChanged;
    }
}